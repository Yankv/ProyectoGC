@{
    ViewData["Title"] = "Empresa";
}

<head>

</head>

<body>
    <div class="container mb-4">
        <div class="row mt-4">
            <h2 class="fs-1" style="color: black">Información de la empresa</h2>
        </div>
        <div class="mt-3 row container">
            <h3 style="color: black">Actualizar información de la empresa</h3>
            <form asp-controller="Sistema" asp-action="ActualizarInfo" class="row needs-validation" method="post" onsubmit="return actualizarInfo()" novalidate>
                <div>
                    <div class="row mt-2">
                        <div class="col-6">
                            <div class="form-group">
                                <label for="nombre">Nombre</label>
                                <input type="text" class="form-control" id="nombre" name="Nombre" required value="@ViewBag.Info.Nombre" />
                                <div class="invalid-feedback">Nombre necesario</div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label for="apellidos">Telefono</label>
                                <input type="text" class="form-control" id="apellidos" name="Telefono" pattern="[0-9]+" required value="@ViewBag.Info.Telefono" />
                                <div class="invalid-feedback">Valores incorrectos</div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-6">
                            <div class="form-group">
                                <label for="nombres">Correo</label>
                                <input type="email" class="form-control" id="nombres" name="Correo" required value="@ViewBag.Info.Correo" />
                                <div class="invalid-feedback">Correo necesario</div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label for="apellidos">Dirección</label>
                                <input type="text" class="form-control" id="apellidos" name="Direccion" required value="@ViewBag.Info.Direccion" />
                                <div class="invalid-feedback">Dirección necesaria</div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <h5 class="label mt-2 ">Descripción</h5>
                        <div>
                            <textarea class="form-control" id="descripcion" rows="3" name="Descripcion" required>@ViewBag.Info.Descripcion</textarea>
                            <div class="invalid-feedback">Descripción necesaria</div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mt-2">
                        <a class="btn btn-primary fw-bolder col-3 m-1" asp-controller="Sistema" asp-action="Empresa">Cancelar</a>
                        <button type="submit" class="btn btn-primary fw-bolder col-3 m-1">Actualizar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script>
        function actualizarInfo() {
            var respuesta = confirm("¿Estás seguro de que quieres actualizar la información de la empresa?");
            return respuesta;
        }
    </script>

</body>