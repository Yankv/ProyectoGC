@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <title>Reserv+</title>
    <style>
        .botones {
            margin: 1rem;
        }

        footer {
            padding: 20px 0;
            text-align: center;
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
        }

            footer p {
                margin: 5px 0;
            }
    </style>
</head>

<body>
    <div>
        <div class="d-flex justify-content-end">
            <a class="fw-semibold fst-italic btn btn-primary fw-bolder botones col-2" style="font-size: 0.9rem" asp-controller="Login" asp-action="Login">
                Iniciar sesion
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                     class="bi bi-box-arrow-in-right" viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                          d="M6 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 0-1 0v2A1.5 1.5 0 0 0 6.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-8A1.5 1.5 0 0 0 5 3.5v2a.5.5 0 0 0 1 0v-2z" />
                    <path fill-rule="evenodd"
                          d="M11.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H1.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                </svg>
            </a>
            <a class="fw-semibold fst-italic btn btn-primary fw-bolder botones col-2" style="font-size: 0.9rem" asp-controller="Usuario" asp-action="Registro">
                Registrarse
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                     class="bi bi-person-plus-fill" viewBox="0 0 16 16">
                    <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                    <path fill-rule="evenodd"
                          d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z" />
                </svg>
            </a>
        </div>
        <div class="row bg-white rounded-5">
            <section>
                <div class="text-center align-items-center">
                    <img src="~/css/IMG/logo.png" alt="">
                </div>
                <div class="text-center align-items-center">
                    <h1 class="fs-1 fw-bold">@ViewBag.InfoEmpresa.Nombre</h1>
                </div>
                <footer>
                    <div class="container mt-4">
                        <p>&copy; 2023, Proyecto de Programación WEB, Universidad de la Amazonia</p>
                        <p>Contacto: @ViewBag.InfoEmpresa.Correo   Tel. @ViewBag.InfoEmpresa.Telefono</p>
                        <p>Direccion: @ViewBag.InfoEmpresa.Direccion </p>
                    </div>
                </footer>
            </section>
        </div>
      
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
</body>

</html>
