@model LogicaNegocio.Models.Recurso
@{
    ViewData["Title"] = "Crear recurso";
}

<head>

</head>

<body>
    <div class="container mb-4">
        <div class="row mt-4">
            <h2 class="fs-1" style="color: black">Crear recurso</h2>
        </div>
        <div class="mt-3 border border-black rounded container p-3">
            <div class="col text-start">
                <h3 style="color: black">Información general</h3>
            </div>
            <form class="needs-validation" id="resgistro" asp-controller="Recurso" asp-action="Crear" method="post" novalidate>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label for="tipoRecurso">Tipo de recurso</label>
                            <select class="form-select" id="tipoRecurso" name="Fk_tp_recurso.Pk_tp_recurso" required>
                                <option value="" disabled selected>
                                    Seleccione tipo de recurso
                                </option>
                                <option value="1">
                                    Persona
                                </option>
                                <option value="2">
                                    Fisico
                                </option>
                            </select>
                            <div class="invalid-feedback">Campo necesario</div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label for="encargado">Encargado</label>
                            <select required class="form-select" id="encargado" name="Fk_usuario_encargado.Numero_doc">
                                <option value="0">
                                    Seleccione un encargado
                                </option>
                                @foreach (var users in ViewBag.Usuarios)
                                {
                                    <option value="@users.Numero_doc">@users.Nombre @users.Apellido</option>
                                }
                            </select>
                            <div class="invalid-feedback">Encargado necesario</div>
                        </div>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-6">
                        <div class="form-group">
                            <label for="nombre">Nombre del recurso</label>
                            <input type="text" class="form-control" name="Nombre" required />
                            @* <input type="hidden" id="nombre_r" name="Nombre" value=""> *@
                            <div class="invalid-feedback">Nombre necesario</div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label for="direccion">Dirección </label>
                            <input type="text" class="form-control" id="direccion" name="Direccion" required />
                            <div class="invalid-feedback">Campo necesario</div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="mt-4 text-center">
                        <button type="button" class="btn btn-secondary fw-bolder col-3 mr-3" asp-controller="Recurso"
                                asp-action="Gestionar">
                            Cancelar
                        </button>
                        <button type="submit" class="btn btn-primary fw-bolder col-3 ml-3">Crear recurso</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

